  <style>
    input[type=text], select { width:75%; padding: 5% 0px; margin:15%; display:
    inline-block; border: 1px solid #ccc; border-radius: 4px; box-sizing:
    border-box; } #Submit { visibility: hidden; }
  </style>

  <form method="POST">
    <table>
      <tr>
        <th style="text-align:center">Categories: </th>
        <th style="text-align:center">Food</th>
        <th style="text-align:center">Travel/Transportation</th>
        <th style="text-align:center">Payments</th>
        <th style="text-align:center">Entertainment</th>
        <th style="text-align:center">Shopping</th>
      </tr>
      <tr>
        <td style="text-align:center">Desired $: </td>
        <td style="text-align:center"><input
            type="text"
            placeholder={{desired_food}}
            name="desiredFood"
            id="desiredFood"
            style="text-align:center"
          /></td>
        <td style="text-align:center"><input
            type="text"
            placeholder={{desired_travel}}
            name="desiredTravel"
            style="text-align:center"
          /></td>
        <td style="text-align:center"><input
            type="text"
            placeholder={{desired_payments}}
            name="desiredPayments"
            style="text-align:center"
          /></td>
        <td style="text-align:center"><input
            type="text"
            placeholder={{desired_entertainment}}
            name="desiredEntertainment"
            style="text-align:center"
          /></td>
        <td style="text-align:center">
          <input
            type="text"
            placeholder={{desired_shopping}}
            name="desiredShopping"
            style="text-align:center"
          /></td>
      </tr>
      <tr>
        <td style="text-align:center">Actual $: </td>
        <td style="text-align:center">{{actual_food}}</td>
        <td style="text-align:center">{{actual_travel}}</td>
        <td style="text-align:center">{{actual_payments}}</td>
        <td style="text-align:center">{{actual_entertainment}}</td>
        <td style="text-align:center">{{actual_shopping}}</td>
      </tr>

      <tr>

      </tr>
      <td>
        <input
          style="text-align:center"
          type="submit"
          value="Submit Budget"
          id="Submit"
        />
      </td>
    </table>

  </form>

  <footer>Target Budget: {{desired_balance}}</footer>
  <footer>Total Spent: {{actual_balance}}</footer>
  <footer>{{over_or_under}}{{over_or_under_amount}}</footer><br />
