  <section>
    <div class="row">
      {{! TOTAL }}
      <div class="col-xxxl-3 col-sm-50% col-12 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between px-md-1">
              <div>
                <h3 class="text-success">70% of Total Budget Spent</h3>
                {{! <p class="mb-0">Total</p> }}
              </div>
              <div class="align-self-center">
                <i class="fas fa-money text-success fa-3x"></i>
              </div>
            </div>
            <div class="px-md-1">
              <div class="progress mt-3 mb-1 rounded" style="height: 17px">
                <div
                  class="progress-bar bg-success"
                  role="progressbar"
                  style="width: 60%"
                  aria-valuenow="60"
                  aria-valuemin="0"
                  aria-valuemax="100"
                ></div>
              </div>
              <div id="total" style="width: 100%; height: 350%"></div>
            </div>
          </div>
        </div>
      </div>

      <br />
      <h4 style="text-align:center">Spending per category</h4>

      {{! FOOD }}
      <div class="col-xxxl-3 col-sm-6 col-12 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between px-md-1">
              <div>
                <h4 class="text-warning">Food - $450</h4>
                <p class="mb-0">Desired Budget: $500</p>
                <p class="mb-0">$50 remaining</p>
              </div>
              <div class="align-self-center">
                <i class="fas fa-mug-hot text-warning fa-3x"></i>
              </div>
            </div>
            <div class="px-md-1">
              <div class="progress mt-3 mb-1 rounded" style="height: 7px">
                <div
                  class="progress-bar bg-warning"
                  role="progressbar"
                  style="width: 78%"
                  aria-valuenow="60"
                  aria-valuemin="0"
                  aria-valuemax="100"
                ></div>
              </div>
              {{! <div id="food" style="width: 100%; height: 100%"></div> }}
            </div>
          </div>
        </div>
      </div>

      {{! TRANSPORTATION }}
      <div class="col-xxxl-3 col-sm-6 col-12 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between px-md-1">
              <div>
                <h4 class="text-danger">Transportation - $250</h4>
                <p class="mb-0">Desired Budget: $280</p>
                <p class="mb-0">$30 remaining</p>
              </div>
              <div class="align-self-center">
                <i class="fas fa-car text-danger fa-3x"></i>
              </div>
            </div>
            <div class="px-md-1">
              <div class="progress mt-3 mb-1 rounded" style="height: 7px">
                <div
                  class="progress-bar bg-danger"
                  role="progressbar"
                  style="width: 90%"
                  aria-valuenow="60"
                  aria-valuemin="0"
                  aria-valuemax="100"
                ></div>
              </div>
              {{! <div id="transportation" style="width: 100%; height: 100%"></div> }}
            </div>
          </div>
        </div>
      </div>
      {{! SHOPPING }}
      <div class="col-xxxl-3 col-sm-6 col-12 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between px-md-1">
              <div>
                <h4 class="text-success">Shopping - $100</h4>
                <p class="mb-0">Desired Budget: $250</p>
                <p class="mb-0">$150 remaining</p>
              </div>
              <div class="align-self-center">
                <i class="fas fa-wallet text-success fa-3x"></i>
              </div>
            </div>
            <div class="px-md-1">
              <div class="progress mt-3 mb-1 rounded" style="height: 7px">
                <div
                  class="progress-bar bg-success"
                  role="progressbar"
                  style="width: 60%"
                  aria-valuenow="60"
                  aria-valuemin="0"
                  aria-valuemax="100"
                ></div>
              </div>
              {{! <div id="shopping" style="width: 100%; height: 100%"></div> }}
            </div>
          </div>
        </div>
      </div>
      {{! ENTERTAINMENT }}
      <div class="col-xxxl-3 col-sm-6 col-12 mb-4">
        <div class="card">
          <div class="card-body">
